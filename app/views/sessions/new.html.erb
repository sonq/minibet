<div class = 'container-fluid'>

  <div class = 'col-xs-12'>





<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url:login_path) do |n| %>
      <div class = "form-group">
        <h1 class= "center"> Log in </h1>
        <div class = "control-label col-sm-4">

          <%= n.label "User Name" %> 
        </div>
        <div class="col-sm-4">
          <%= n.text_field :username, class: "form-control", placeholder: "User Name", autofocus: true %>
        </div>
     


 </div> 

        <div class = "form-group">
        <div class = "control-label col-sm-4">
          <%= n.label :password %> 
        </div>
        <div class="col-sm-4">
          <%= n.password_field :password, class: "form-control", autocomplete: "off", autofocus: true, placeholder: "Password" %>
        </div>
      </div>


      <div class = "form-group">
        <div class = "col-sm-offset-4 col-sm-12">
          <%= n.submit "Log in" , class: 'btn btn-primary' %>
        </div>
      </div>
</div>
</div>
<% end %>